<h2>Todo一覧</h2>
  <% @todos.each do |t| %>
    <%= t.do %>
    <%= link_to "詳細", todo_path(t) %>
    <%= link_to "編集", edit_todo_path(t) %>
    <%= link_to "削除", todo_path(t), method: :delete, data: {confirm: "削除しますか？" } %><br>
  <% end %>

<h2>Todo作成</h2>
  <%= form_with model: @todo do |form| %>
  <%= form.text_field :do %>
  <%= form.submit %>
  <% end %>
